<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/back"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="130dp"
            android:text="계정 추가"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="70dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp">
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="600dp"
            android:orientation="vertical"
            android:layout_marginHorizontal="70dp">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textColor="@color/white"
                android:textSize="35dp"
                >
            </TextView>
            <EditText
                android:id="@+id/edittext"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="이름"
                android:textColorHint="@color/white"
                android:background="@color/transparent_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_marginTop="30dp">
            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ok_buttonshape"
                    android:text="남"
                    android:textSize="25dp"
                    android:layout_marginRight="20dp"
                    ></Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ok_buttonshape"
                    android:text="여"
                    android:textSize="25dp"
                    ></Button>
            </LinearLayout>
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textColor="@color/white"
                android:textSize="35dp"
                >
            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/birth"
                    android:background="@color/transparent_gray"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="700dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취향선택(2개)"
                android:textColor="@color/white"
                android:textSize="35dp"
                >
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="110dp"
                    android:background="@drawable/animal"
                    android:layout_margin="10dp">
                </ImageButton>
                <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="110dp"
                    android:background="@drawable/education"
                    android:layout_margin="10dp">
                </ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="110dp"
                    android:background="@drawable/classic"
                    android:layout_margin="10dp">
                </ImageButton>
                <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="110dp"
                    android:background="@drawable/jazz"
                    android:layout_margin="10dp">
                </ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="110dp"
                    android:background="@drawable/nature"
                    android:layout_margin="10dp">
                </ImageButton>
                <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="110dp"
                    android:background="@drawable/daily"
                    android:layout_margin="10dp">
                </ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/add_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ok_buttonshape"
                    android:text="취소"
                    android:textColor="@color/red"
                    android:textSize="25dp"
                    android:layout_margin="10dp"
                    ></Button>
                <Button
                    android:id="@+id/add_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ok_buttonshape"
                    android:text="완료"
                    android:textSize="25dp"
                    android:layout_margin="10dp"
                    ></Button>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>