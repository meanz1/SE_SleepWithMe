<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/back"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/opening_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="48dp"
            android:text="고은서님,\n오늘도 좋은 밤 되세요"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="110dp"
            android:layout_marginBottom="140dp"
            android:layout_weight="1"/>

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginRight="120dp"
            android:textOn=""
            android:textOff=""
            android:layout_marginBottom="160dp"
            android:background="@drawable/off"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@android:color/transparent"
        android:gravity="center">

        <ImageButton
            android:id="@+id/account"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/home_account"/>

        <ImageButton
            android:id="@+id/recommend"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/home_recomm"/>

        <ImageButton
            android:id="@+id/alarm"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/home_alarm"/>

        <ImageButton
            android:id="@+id/myData"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/home_mydata"/>
    </LinearLayout>

</LinearLayout>